{
    "autoclose": false,
    "autosu": true,
    "colorscheme": "gotham",
    "ft:makefile": {
        "tabstospaces": false
    },
    "rmtrailingws": true,
    "savecursor": true,
    "saveundo": true,
    "scrollbar": true,
    "scrollspeed": 3,
    "softwrap": true,
    "tabstospaces": true,
    "wordwrap": true,
    "aspell.check": "off",
    "aspell.sugmode": "ultra",
    "*.txt": {
        "aspell.check": "on"
    },
    "ft:markdown": {
        "aspell.check": "on"
    },
    "ft:unknown": {
        "aspell.check": "on"
    }
}
